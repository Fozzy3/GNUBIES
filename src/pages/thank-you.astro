---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro'
---

<Layout title="Gracias">
    <main class="min-h-screen bg-gray-900 text-white flex flex-col items-center justify-center p-3">
        <Header />
        <div class="mx-auto text-center mb-8 lg:mb-16">
            <section class="tracking-tight bg-gradient-animated bg-400% animate-gradient p-10 rounded-lg shadow-lg">
                <div class="relative text-3xl text-center text-black bg-white p-8 rounded-lg shadow-lg">
                    <h1 class="text-4xl font-extrabold mb-4 text-gradient">¡Gracias por Responder!</h1>
                    <p class="text-lg font-light">
                        Estaremos en contacto contigo pronto. ¡Te deseamos un excelente día!
                    </p>
                </div>
            </section>
        </div>
    </main>
</Layout>
